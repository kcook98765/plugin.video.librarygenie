<addon id="plugin.video.librarygenie" version="1.0.4" name="LibraryGenie" provider-name="kcook98765">
    <!-- """ /addon.xml """ -->
    <requires>
        <import addon="xbmc.python" version="3.0.0"/>
        <import addon="script.module.pyxbmct" />
    </requires>
    <extension point="xbmc.python.pluginsource" library="main.py">
        <provides>video</provides>
    </extension>
    <extension point="xbmc.python.script" library="main.py"/>
    <extension point="xbmc.addon.metadata">
        <summary>LibraryGenie is a Kodi addon handles lists and integration with AI enabled features.</summary>
    </extension>
    <extension point="xbmc.addon.settings">
        <settings>
            <setting id="api_base_url" type="text" label="API Base URL" default="http://your-domain"/>
            <setting id="api_key" type="text" label="API Key" default=""/>
        </settings>
    </extension>
    <extension point="kodi.context.item">
      <menu id="kodi.core.main">
        <item library="resources/lib/context.py">
            <label>LibraryGenie</label>
            <visible>true</visible>
        </item>
      </menu>
    </extension>
</addon>
