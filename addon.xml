        <forum>https://forum.kodi.tv/</forum>
        <assets>
            <icon>generated-icon.png</icon>
        </assets>
    </extension>
    <extension point="xbmc.python.script" library="resources/lib/context.py">
        <provides>context</provides>
    </extension>
    <extension point="xbmc.addon.context.item" library="resources/context.xml">
        <item>
            <label>30001</label>
            <visible>!String.IsEmpty(ListItem.DBID)</visible>
