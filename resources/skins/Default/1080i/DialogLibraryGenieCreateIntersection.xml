<?xml version="1.0" encoding="UTF-8"?>
<window type="dialog">
    <defaultcontrol always="true">100</defaultcontrol>
    <allowoverlay>yes</allowoverlay>
    <controls>
        <!-- FULLSCREEN SOLID BACKGROUND - Layer 1 -->
        <control type="image" id="1">
            <description>Fullscreen Dialog Background</description>
            <left>0</left>
            <top>0</top>
            <width>1920</width>
            <height>1080</height>
            <texture>special://home/addons/plugin.video.librarygenie/resources/media/solid.png</texture>
            <colordiffuse>FF000000</colordiffuse>
            <aspectratio>stretch</aspectratio>
            <visible>true</visible>
        </control>
        
        <!-- FULLSCREEN SOLID BACKGROUND - Layer 2 -->
        <control type="image" id="2">
            <description>Black overlay for opacity</description>
            <left>0</left>
            <top>0</top>
            <width>1920</width>
            <height>1080</height>
            <texture>special://home/addons/plugin.video.librarygenie/resources/media/solid.png</texture>
            <colordiffuse>EE000000</colordiffuse>
            <aspectratio>stretch</aspectratio>
            <visible>true</visible>
        </control>
        
        <!-- FULLSCREEN SOLID BACKGROUND - Layer 3 -->
        <control type="image" id="3">
            <description>Third black layer</description>
            <left>0</left>
            <top>0</top>
            <width>1920</width>
            <height>1080</height>
            <texture>special://home/addons/plugin.video.librarygenie/resources/media/solid.png</texture>
            <colordiffuse>DD000000</colordiffuse>
            <aspectratio>stretch</aspectratio>
            <visible>true</visible>
        </control>
        
        <control type="group">
            <left>100</left>
            <top>80</top>
            <width>1720</width>
            <height>920</height>
            
            <!-- Content area background -->
            <control type="image">
                <width>1720</width>
                <height>920</height>
                <texture>special://home/addons/plugin.video.librarygenie/resources/media/solid.png</texture>
                <colordiffuse>FF1A1A1A</colordiffuse>
                <aspectratio>stretch</aspectratio>
                <visible>true</visible>
            </control>
            
            <!-- Header: Title -->
            <control type="label">
                <left>40</left>
                <top>20</top>
                <width>1640</width>
                <height>50</height>
                <align>center</align>
                <font>font13</font>
                <textcolor>FFFFFFFF</textcolor>
                <label>Create Intersection List</label>
            </control>
            
            <!-- List Name Label -->
            <control type="label">
                <left>40</left>
                <top>80</top>
                <width>200</width>
                <height>40</height>
                <align>left</align>
                <aligny>center</aligny>
                <font>font12</font>
                <textcolor>FFFFFFFF</textcolor>
                <label>List Name:</label>
            </control>
            
            <!-- List Name Input Field -->
            <control type="edit" id="100">
                <left>250</left>
                <top>80</top>
                <width>1390</width>
                <height>40</height>
                <font>font12</font>
                <textcolor>FFFFFFFF</textcolor>
                <focusedcolor>FFFFAA00</focusedcolor>
                <invalidcolor>FFFF0000</invalidcolor>
                <texturefocus colordiffuse="FF2A5A7A">special://home/addons/plugin.video.librarygenie/resources/media/solid.png</texturefocus>
                <texturenofocus colordiffuse="FF303030">special://home/addons/plugin.video.librarygenie/resources/media/solid.png</texturenofocus>
                <pulseonselect>false</pulseonselect>
                <onup>100</onup>
                <ondown>200</ondown>
                <onleft>100</onleft>
                <onright>100</onright>
            </control>
            
            <!-- Selection counter -->
            <control type="label" id="300">
                <left>40</left>
                <top>130</top>
                <width>1640</width>
                <height>30</height>
                <align>center</align>
                <font>font12</font>
                <textcolor>FF00CED1</textcolor>
                <label>0 lists selected</label>
            </control>
            
            <!-- Lists Container -->
            <control type="panel" id="200">
                <left>40</left>
                <top>170</top>
                <width>1640</width>
                <height>400</height>
                <onup>100</onup>
                <ondown>200</ondown>
                <onleft>600</onleft>
                <onright>600</onright>
                <viewtype label="list">list</viewtype>
                <pagecontrol>-</pagecontrol>
                <scrolltime>200</scrolltime>
                <orientation>vertical</orientation>
                <itemlayout height="60" width="1640">
                    <!-- Item background -->
                    <control type="image">
                        <left>0</left>
                        <top>0</top>
                        <width>1640</width>
                        <height>58</height>
                        <texture>special://home/addons/plugin.video.librarygenie/resources/media/solid.png</texture>
                        <colordiffuse>FF303030</colordiffuse>
                        <aspectratio>stretch</aspectratio>
                    </control>
                    
                    <!-- Checkbox indicator -->
                    <control type="image">
                        <left>10</left>
                        <top>16</top>
                        <width>28</width>
                        <height>28</height>
                        <texture>special://home/addons/plugin.video.librarygenie/resources/media/solid.png</texture>
                        <colordiffuse>FF666666</colordiffuse>
                        <visible>!String.IsEqual(ListItem.Property(selected),1)</visible>
                    </control>
                    <control type="image">
                        <left>10</left>
                        <top>16</top>
                        <width>28</width>
                        <height>28</height>
                        <texture>special://home/addons/plugin.video.librarygenie/resources/media/solid.png</texture>
                        <colordiffuse>FF00CED1</colordiffuse>
                        <visible>String.IsEqual(ListItem.Property(selected),1)</visible>
                    </control>
                    
                    <!-- List name -->
                    <control type="label">
                        <left>50</left>
                        <top>5</top>
                        <width>1200</width>
                        <height>50</height>
                        <font>font13</font>
                        <textcolor>FFFFFFFF</textcolor>
                        <aligny>center</aligny>
                        <label>$INFO[ListItem.Label]</label>
                    </control>
                    
                    <!-- Item count -->
                    <control type="label">
                        <left>1260</left>
                        <top>5</top>
                        <width>370</width>
                        <height>50</height>
                        <font>font12</font>
                        <textcolor>FFAAAAAA</textcolor>
                        <align>right</align>
                        <aligny>center</aligny>
                        <label>$INFO[ListItem.Property(item_count)] items</label>
                    </control>
                </itemlayout>
                
                <focusedlayout height="60" width="1640">
                    <!-- Focused item background -->
                    <control type="image">
                        <left>0</left>
                        <top>0</top>
                        <width>1640</width>
                        <height>58</height>
                        <texture>special://home/addons/plugin.video.librarygenie/resources/media/solid.png</texture>
                        <colordiffuse>FF2A5A7A</colordiffuse>
                        <aspectratio>stretch</aspectratio>
                    </control>
                    
                    <!-- Checkbox indicator -->
                    <control type="image">
                        <left>10</left>
                        <top>16</top>
                        <width>28</width>
                        <height>28</height>
                        <texture>special://home/addons/plugin.video.librarygenie/resources/media/solid.png</texture>
                        <colordiffuse>FF888888</colordiffuse>
                        <visible>!String.IsEqual(ListItem.Property(selected),1)</visible>
                    </control>
                    <control type="image">
                        <left>10</left>
                        <top>16</top>
                        <width>28</width>
                        <height>28</height>
                        <texture>special://home/addons/plugin.video.librarygenie/resources/media/solid.png</texture>
                        <colordiffuse>FF00E5E5</colordiffuse>
                        <visible>String.IsEqual(ListItem.Property(selected),1)</visible>
                    </control>
                    
                    <!-- List name -->
                    <control type="label">
                        <left>50</left>
                        <top>5</top>
                        <width>1200</width>
                        <height>50</height>
                        <font>font13</font>
                        <textcolor>FFFFAA00</textcolor>
                        <aligny>center</aligny>
                        <label>$INFO[ListItem.Label]</label>
                    </control>
                    
                    <!-- Item count -->
                    <control type="label">
                        <left>1260</left>
                        <top>5</top>
                        <width>370</width>
                        <height>50</height>
                        <font>font12</font>
                        <textcolor>FFCCCCCC</textcolor>
                        <align>right</align>
                        <aligny>center</aligny>
                        <label>$INFO[ListItem.Property(item_count)] items</label>
                    </control>
                </focusedlayout>
            </control>
            
            <!-- Action Buttons Area -->
            <control type="grouplist" id="600">
                <left>40</left>
                <top>590</top>
                <width>1640</width>
                <height>290</height>
                <orientation>vertical</orientation>
                <itemgap>10</itemgap>
                <onup>200</onup>
                <ondown>600</ondown>
                <onleft>200</onleft>
                <onright>200</onright>
                
                <!-- Create Intersection button -->
                <control type="button" id="400">
                    <width>1640</width>
                    <height>50</height>
                    <texturefocus colordiffuse="FF2A5A7A">special://home/addons/plugin.video.librarygenie/resources/media/solid.png</texturefocus>
                    <texturenofocus>special://home/addons/plugin.video.librarygenie/resources/media/solid.png</texturenofocus>
                    <colordiffuse>FF404040</colordiffuse>
                    <font>font13</font>
                    <textcolor>FFFFFFFF</textcolor>
                    <focusedcolor>FF00FF00</focusedcolor>
                    <align>center</align>
                    <aligny>center</aligny>
                    <label>Create Intersection</label>
                </control>
                
                <!-- Select All button -->
                <control type="button" id="401">
                    <width>1640</width>
                    <height>50</height>
                    <texturefocus colordiffuse="FF2A5A7A">special://home/addons/plugin.video.librarygenie/resources/media/solid.png</texturefocus>
                    <texturenofocus>special://home/addons/plugin.video.librarygenie/resources/media/solid.png</texturenofocus>
                    <colordiffuse>FF404040</colordiffuse>
                    <font>font13</font>
                    <textcolor>FFFFFFFF</textcolor>
                    <focusedcolor>FFFFAA00</focusedcolor>
                    <align>center</align>
                    <aligny>center</aligny>
                    <label>Select All</label>
                </control>
                
                <!-- Deselect All button -->
                <control type="button" id="402">
                    <width>1640</width>
                    <height>50</height>
                    <texturefocus colordiffuse="FF2A5A7A">special://home/addons/plugin.video.librarygenie/resources/media/solid.png</texturefocus>
                    <texturenofocus>special://home/addons/plugin.video.librarygenie/resources/media/solid.png</texturenofocus>
                    <colordiffuse>FF404040</colordiffuse>
                    <font>font13</font>
                    <textcolor>FFFFFFFF</textcolor>
                    <focusedcolor>FFFFAA00</focusedcolor>
                    <align>center</align>
                    <aligny>center</aligny>
                    <label>Deselect All</label>
                </control>
                
                <!-- Cancel button -->
                <control type="button" id="403">
                    <width>1640</width>
                    <height>50</height>
                    <texturefocus colordiffuse="FF2A5A7A">special://home/addons/plugin.video.librarygenie/resources/media/solid.png</texturefocus>
                    <texturenofocus>special://home/addons/plugin.video.librarygenie/resources/media/solid.png</texturenofocus>
                    <colordiffuse>FF606060</colordiffuse>
                    <font>font13</font>
                    <textcolor>FFFFFFFF</textcolor>
                    <focusedcolor>FFFFAA00</focusedcolor>
                    <align>center</align>
                    <aligny>center</aligny>
                    <label>Cancel</label>
                </control>
            </control>
        </control>
    </controls>
</window>
