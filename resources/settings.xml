    <setting label="30520" type="lsep"/>
    <setting id="backup_include_settings" type="bool" label="30521" default="true"/>
    <setting id="backup_include_non_library" type="bool" label="30522" default="false"/>
    <setting id="backup_include_folders" type="bool" label="30523" default="true"/>
    <setting label="30530" type="lsep"/>
    <setting id="backup_storage_type" type="select" label="30531" default="0" lvalues="30565"/>
    <setting id="backup_storage_location" type="folder" label="30532" default="special://userdata/addon_data/plugin.video.librarygenie/backups/"/>
    <setting label="30540" type="lsep"/>
    <setting id="last_backup_time" type="text" label="" default="" visible="false"/>
    <setting id="backup_test_action" type="action" label="30541" action="RunPlugin(plugin://plugin.video.librarygenie/?action=test_backup)"/>
    <setting id="backup_manual_action" type="action" label="30542" action="RunPlugin(plugin://plugin.video.librarygenie/?action=manual_backup)"/>
    <setting id="backup_restore_action" type="action" label="30543" action="RunPlugin(plugin://plugin.video.librarygenie/?action=restore_backup)"/>
  </category>

  <!-- Advanced Settings -->
  <category label="30300">
    <setting label="30310" type="lsep"/>
    <setting id="jsonrpc_page_size" type="slider" label="30311" default="200" range="50,10,500" option="int"/>
    <setting id="jsonrpc_timeout_seconds" type="slider" label="30312" default="10" range="5,1,30" option="int"/>
    <setting label="30320" type="lsep"/>
    <setting id="db_batch_size" type="slider" label="30321" default="200" range="50,10,500" option="int"/>
    <setting id="db_busy_timeout_ms" type="slider" label="30322" default="3000" range="1000,500,10000" option="int"/>
  </category>

  <!-- Remote Services Settings -->
  <category label="30400">
    <setting label="30410" type="lsep"/>
    <setting id="remote_base_url" type="text" label="30411" default="https://YOUR-LIBRARYGENIE/api"/>
    <setting id="device_name" type="text" label="30412" default="Kodi"/>
    <setting id="auth_poll_seconds" type="slider" label="30413" default="3" range="1,1,10" option="int"/>
    <setting label="30420" type="lsep"/>
    <setting id="background_interval_minutes" type="number" label="30451" default="5" option="int" range="1,1440"/>
