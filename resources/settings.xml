<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<settings>
    <category label="General">
        <setting id="debug_logging" type="bool" label="Enable Debug Logging" default="true" />
        <setting id="max_folder_depth" type="number" label="Maximum Folder Depth" default="2" />
        <setting type="sep" />
        <setting id="clear_all_local_data" type="action" label="Clear All Local Lists and Folders" action="RunScript(plugin.video.librarygenie,clear_all_local_data)" />
        <setting id="import_from_shortlist" type="action" label="Import From Shortlist" option="close" action="RunScript(plugin.video.librarygenie, import_from_shortlist)" visible="System.HasAddon(plugin.program.shortlist)"/>
        <setting id="import_favorites" type="action" label="Import from Favorites" action="RunPlugin(plugin://plugin.video.librarygenie/?action=import_favorites)" />

        <setting type="sep"/>
        <setting id="separator_sync" type="lsep" label="Remote API Options" />
    </category>

    <category label="Remote API Setup">
        <setting id="remote_api_url" type="text" label="Remote API Server URL" default="http://192.168.2.106:5020" />
        <setting id="remote_api_key" type="text" label="Remote API Key" default="" option="hidden" />
        <setting type="sep" />
        <setting id="setup_remote_api" type="action" label="Setup Remote API (Easy)" action="RunScript(plugin.video.librarygenie,setup_remote_api)" />
        <setting id="manual_setup_remote_api" type="action" label="Manual Setup Remote API" action="RunScript(plugin.video.librarygenie,manual_setup_remote_api)" />
        <setting id="test_remote_api" type="action" label="Test Remote API Connection" action="RunScript(plugin.video.librarygenie,test_remote_api)" />
    </category>

    <category label="Library Sync">
        <setting id="upload_library_delta" type="action" label="Sync Library to Server (Delta)" action="RunScript(plugin.video.librarygenie,upload_library_delta)" />
        <setting id="upload_library_full" type="action" label="Upload Full Library (Replace)" action="RunScript(plugin.video.librarygenie,upload_library_full)" />
        <setting id="upload_status" type="action" label="View Upload Status" action="RunScript(plugin.video.librarygenie,upload_status)" />
    </category>
</settings>