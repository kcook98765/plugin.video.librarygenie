    <setting label="30430" type="lsep"/>
    <setting id="ai_search_otp_code" type="text" label="30432" default="" enable="!eq(-4,)" option="hidden"/>
    <setting id="ai_search_authorize_action" type="action" label="30435" action="RunPlugin(plugin://plugin.video.librarygenie/?action=authorize_ai_search)" enable="!eq(-1,)"/>
    <setting id="ai_search_api_key" type="text" label="30433" default="" visible="false"/>
    <setting id="ai_search_activated" type="bool" label="30423" help="30424" default="false" enable="!eq(-4,)" />
        <setting id="ai_search_sync_interval" type="slider" label="30425" help="30426" default="3600" range="1800,1,86400" option="int" enable="eq(-1,true)" />
    </category>

  <!-- UI Settings -->
  <category label="30020">
    <setting id="info_hijack_enabled" type="bool" label="32087" default="true"/>
  </category>
</settings>