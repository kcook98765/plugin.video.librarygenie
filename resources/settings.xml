    <setting id="favorites_batch_processing" type="bool" label="30054" default="true" enable="eq(-2,true)"/>
    <setting label="30070" type="lsep"/>
    <setting id="shortlist_import_action" type="action" label="30071" action="RunPlugin(plugin://plugin.video.librarygenie/?action=import_shortlist)"/>
