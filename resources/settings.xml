  </category>

  <!-- Background Settings -->
  <category label="30100">
    <setting label="30110" type="lsep"/>
    <setting id="background_task_enabled" type="bool" label="30111" default="true"/>
    <setting id="background_interval_seconds" type="slider" label="30112" default="60" range="30,5,3600" option="int" enable="eq(-1,true)"/>
  </category>

  <!-- Backup Settings -->
  <category label="30500">
    <setting label="30510" type="lsep"/>
    <setting id="backup_enabled" type="bool" label="30511" default="false"/>
    <setting id="backup_interval" type="select" label="30512" default="0" lvalues="30562|30563|30564" enable="eq(-1,true)"/>
