<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<settings>
  <!-- General Settings -->
  <category label="30000">
    <setting label="30010" type="lsep"/>
    <setting id="debug_logging" type="bool" label="30011" default="false"/>
    <setting label="30020" type="lsep"/>
    <setting id="confirm_destructive_actions" type="bool" label="30021" default="true"/>
    <setting id="show_item_counts" type="bool" label="30022" default="true"/>
    <setting id="show_missing_indicators" type="bool" label="30043" default="true"/>
    <setting id="select_action" type="select" label="35100" lvalues="35101|35102" default="0"/>
    <setting label="30030" type="lsep"/>
    <setting id="track_library_changes" type="bool" label="30031" default="true"/>
    <setting id="soft_delete_removed_items" type="bool" label="30032" default="true"/>

  </category>

  <!-- Lists Settings -->
  <category label="30200">
    <setting label="30040" type="lsep"/>
    <setting id="set_default_list_action" type="action" label="30041" action="RunPlugin(plugin://plugin.video.librarygenie/?action=set_default_list)"/>
    <setting id="quick_add_enabled" type="bool" label="30042" default="false"/>
    <setting id="default_list_id" type="text" label="30044" default="" visible="false"/>
